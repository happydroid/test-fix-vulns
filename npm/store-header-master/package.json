      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^0.3.6",
    "eslint": "^7.15.0",
    "eslint-config-vtex": "^12.9.1",
    "eslint-config-vtex-react": "^6.9.1",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "typescript": "^3.7.5"
  }
}
